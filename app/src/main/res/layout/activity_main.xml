<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="model" type="com.example.compass.ui.main.MainActivityViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent" android:layout_height="match_parent"
            tools:context=".ui.main.MainActivity">

        <com.example.compass.ui.compass.CompassView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_centerInParent="true"
                android:id="@+id/compass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/coordinates_container"
                android:layout_alignParentBottom="true"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

            <EditText
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="@={model.longitude}"
                    android:layout_height="wrap_content"
                    android:hint="Latitude"
                    android:textAlignment="center"/>

            <EditText
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:text="@={model.latitude}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Longitude"
                    android:textAlignment="center"/>

        </LinearLayout>

        <ImageView
                android:background="@drawable/small_green_circle"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/compass"
                android:id="@+id/navigate_button"
                android:layout_width="128dp"
                app:layout_constraintTop_toBottomOf="@id/compass"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="128dp"
                app:layout_constraintBottom_toTopOf="@id/coordinates_container"
        />

        <TextView
                app:layout_constraintRight_toRightOf="@id/navigate_button"
                app:layout_constraintLeft_toLeftOf="@id/navigate_button"
                app:layout_constraintBottom_toBottomOf="@id/navigate_button"
                app:layout_constraintTop_toTopOf="@id/navigate_button"
                android:text="NAVIGATE"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>